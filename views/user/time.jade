extends ../layout/layout

block content
	title time
	.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
		ol.breadcrumb
			li
				a(href='index.html') Home
			li.active Time
	.row.text-left
		.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
			.panel-body
				h2
					| Time
					span.pull-right
						a.btn.btn-success(href='time.html') add time
	.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
		.panel.panel-default
			.panel-body
				form(role='form')
					a(href='editime.html') 09:00
					span.pull-right
						.onoffswitch
							input#myonoffswitch.onoffswitch-checkbox(type='checkbox', name='onoffswitch', checked='')
							label.onoffswitch-label(for='myonoffswitch')
								span.onoffswitch-inner
								span.onoffswitch-switch
					br
					label on
					.divider
					a(href='editime.html') 10:00
					span.pull-right
						.onoffswitch
							input#myonoffswitch2.onoffswitch-checkbox(type='checkbox', name='onoffswitch2', checked='')
							label.onoffswitch-label(for='myonoffswitch2')
								span.onoffswitch-inner
								span.onoffswitch-switch
					br
					label on
					.divider
					a(href='editime.html') 12:30
					span.pull-right
						.onoffswitch
							input#myonoffswitch3.onoffswitch-checkbox(type='checkbox', name='onoffswitch3', checked='')
							label.onoffswitch-label(for='myonoffswitch3')
								span.onoffswitch-inner
								span.onoffswitch-switch
					br
					label on
					.divider
	.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
		.hidden-lg.hidden-md.hidden-sm
			font(color='red') *if you click on this button will remove your device from website
			span.pull-right
				button.btn.btn-danger(type='button', data-toggle='modal', data-target='#myModal') remove device
	.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
		.hidden-xs
			span.pull-right
				font(color='red') *if you click on this button will remove your device from website
				button.btn.btn-danger(type='button', data-toggle='modal', data-target='#myModal') remove device
	#myModal.modal.fade(role='dialog')
		.modal-dialog
			.modal-content
				.modal-body
					p Are you sure?
				.modal-footer
					button.btn.btn-default(type='button') OK
					button.btn.btn-default(type='button', data-dismiss='modal') cancel

// SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME
// JQUERY SCRIPTS
script(src='/jquery.js')
// BOOTSTRAP SCRIPTS
script(src='/js/bootstrap.min.js')
	script.
		function myFunction() {
		var x;
		if (confirm("Are you sure?") == true) {
		x = "You pressed OK!";
		} else {
		x = "You pressed Cancel!";
		}
		document.getElementById("demo").innerHTML = x;
		}
