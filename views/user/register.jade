doctype html
html
	head
		title register
		meta(charset='utf-8')
		meta(name='viewport', content='width=device-width, initial-scale=1.0')
		// BOOTSTRAP STYLES
		link(href='/css/bootstrap.css', rel='stylesheet')
		style(type='text/css').
			.form-group{
			margin-bottom: 15px;
			}
			.divider{
			border-bottom: 1px solid #eee;
			margin-bottom: 20px;
			}
	body
		.container
		.row.text-center
			.col-lg-10.col-lg-offset-1.col-md-12.col-sm-12.col-xs-12
				br
				h1 POWER LINE CONTROLLER
				.divider
				h2 Register
				br
		.row
			.col-md-4.col-md-offset-4.col-sm-6.col-sm-offset-3.col-xs-10.col-xs-offset-1
				.panel.panel-default
					.panel-heading
						strong New User
					.panel-body
						form(role='form')
							br
							.form-group.input-group
								span.input-group-addon @
								input.form-control(type='text', placeholder='e-mail')
							.form-group.input-group
								span.input-group-addon
									i.fa.fa-tag
								input.form-control(type='text', placeholder='Username')
							.form-group.input-group
								span.input-group-addon
									i.fa.fa-lock
								input.form-control(type='password', placeholder='Enter Password')
							.form-group.input-group
								span.input-group-addon
									i.fa.fa-lock
								input.form-control(type='password', placeholder='Retype Password')
							span.pull-right
								a.btn.btn-success(href='login.html') Register Me
							|                                     Already Registered ?
							a(href='login.html') Login here
// SCRIPTS -AT THE BOTOM TO REDUCE THE LOAD TIME
// JQUERY SCRIPTS
script(src='/jquery.js')
// BOOTSTRAP SCRIPTS
script(src='/js/bootstrap.min.js')
